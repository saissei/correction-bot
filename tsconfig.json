{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "target": "ES2020",
    "strict": true,
    "declaration": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest"],
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts", "src/**/**/*.ts", "**/*.ts"],
  "exclude": ["node_modules", "**/**/__tests__", "**/**/**/__tests__", "**/*.test.ts"],
  "compileOnSave": false
}
